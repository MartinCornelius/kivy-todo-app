<NewTodoScreen>:
    MDTextField:
        id: new_task
        hint_text: "Enter task"
        pos_hint: {"center_x":.5, "center_y":.6}
        size_hint_x: .8
    MDRaisedButton:
        text: "Add Task"
        pos_hint: {"center_x":.5, "center_y":.4}
        size_hint_x: .5
        on_release: app.add_task(new_task.text)
    MDFlatButton:
        text: "Back"
        pos_hint: {"center_x":.5, "center_y":.3}
        size_hint_x: .5
        on_release: app.change_screen("all_todo_screen", "right")
