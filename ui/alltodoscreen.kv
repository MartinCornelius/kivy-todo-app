<AllTodoScreen>:
    FloatLayout:
        ScrollView:
            MDList:
                id: all_todo_list
        MDFloatingActionButton:
            icon: "plus"
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"center_x":.8, "center_y":.1}
            on_press: app.new_task()

<OneLineListItem>:
    on_release: app.delete_task_pre(self.text)